<Window x:Class="FftDataAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FftDataAnalyzer.ViewModels"
        Title="FFT Studio"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <DockPanel>
        <!-- Header Bar -->
        <Border DockPanel.Dock="Top"
                Height="60"
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="FFT Studio"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Page Title -->
                <TextBlock Grid.Column="1"
                           Text="{Binding CurrentPageTitle}"
                           FontSize="16"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentUsername}"
                               Foreground="{StaticResource PrimaryTextBrush}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <Button Content="Logout"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding LogoutCommand}"
                            Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Left Sidebar Navigation -->
        <Border DockPanel.Dock="Left"
                Width="240"
                Background="{StaticResource PrimaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">

                <!-- Home Button -->
                <Button Command="{Binding NavigateHomeCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,5"
                        HorizontalContentAlignment="Left"
                        Padding="15,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏠" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Home" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Upload Button -->
                <Button Command="{Binding NavigateUploadCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,5"
                        HorizontalContentAlignment="Left"
                        Padding="15,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📤" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Upload" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Settings Button -->
                <Button Command="{Binding NavigateSettingsCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,5"
                        HorizontalContentAlignment="Left"
                        Padding="15,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Settings" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Background="{StaticResource PrimaryBackgroundBrush}">
            <Frame Content="{Binding CurrentPage}"
                   NavigationUIVisibility="Hidden"
                   Margin="0"/>
        </Border>
    </DockPanel>
</Window>
