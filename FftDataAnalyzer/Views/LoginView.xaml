<Window x:Class="FftDataAnalyzer.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FftDataAnalyzer.ViewModels"
        Title="FFT Studio - Login"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">

            <!-- Logo/Title -->
            <TextBlock Text="FFT Studio"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Fast Fourier Transform Analyzer"
                       FontSize="14"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Username -->
            <TextBlock Text="Username"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,20"/>

            <!-- Password -->
            <TextBlock Text="Password"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,20"/>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource WarningBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Collapsed}"/>

            <!-- Login Button -->
            <Button Content="Login"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}"
                    Margin="0,0,0,12"/>

            <!-- Register Button -->
            <Button Content="Create New Account"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding RegisterCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}"/>

            <!-- Loading Indicator -->
            <TextBlock Text="Loading..."
                       Foreground="{StaticResource SecondaryTextBrush}"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>

        </StackPanel>
    </Grid>
</Window>
