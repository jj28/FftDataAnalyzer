<Window x:Class="FftDataAnalyzer.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FftDataAnalyzer.ViewModels"
        Title="FFT Studio - Register"
        Height="1000" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="460">

            <!-- Title -->
            <TextBlock Text="Create Account"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Username -->
            <TextBlock Text="Username *"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox Style="{StaticResource ModernTextBox}"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"/>

            <!-- Email -->
            <TextBlock Text="Email *"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox Style="{StaticResource ModernTextBox}"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"/>

            <!-- Full Name -->
            <TextBlock Text="Full Name"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox Style="{StaticResource ModernTextBox}"
                     Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"/>

            <!-- Password -->
            <TextBlock Text="Password *"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,16"/>

            <!-- Confirm Password -->
            <TextBlock Text="Confirm Password *"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,20"/>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource WarningBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Register Button -->
            <Button Content="Create Account"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding RegisterCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}"
                    Margin="0,0,0,12">
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource ArrayConverter}">
                        <Binding ElementName="PasswordBox"/>
                        <Binding ElementName="ConfirmPasswordBox"/>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>

            <!-- Cancel Button -->
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}"/>

        </StackPanel>
    </Grid>
</Window>
